<UserControl x:Class="MsBuildTaskExplorer.TaskExplorerWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MsBuildTaskExplorer">
    <!--<UserControl.Resources>
        <ImageBrush x:Key="AddButtonImageBrush" ImageSource="Resources/RunTarget.png" Stretch="UniformToFill"/>
    </UserControl.Resources>-->
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="12">
            <TreeView Name="TasksItemsControl" BorderThickness="0" Background="Transparent">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Targets}">
                        <TextBlock Margin="0,6" Text="{Binding FilePath}"/>
                        <HierarchicalDataTemplate.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Click="RunButtonOnClick" Height="16" Width="16">
                                        <Image Source="pack://application:,,,/MsBuildTaskExplorer;component/Resources/RunTarget.png"/></Button>
                                    <TextBlock Margin="6,8,0,6" Text="{Binding}"></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="Background" Value="{x:Null}" />
                        <Setter Property="BorderBrush" Value="{x:Null}" />
                        <Setter Property="Focusable" Value="False" />
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>
        </ScrollViewer>
    </Grid>
</UserControl>

